{%- extends 'lab/index.html.j2' -%}

{%- block html_head_css -%}
  {{ super() }}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@200;400;700&family=Roboto:ital,wght@0,300;0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  <style>
  body {
    font-family: "Roboto Mono", sans-serif;
    color: #2B394A
  }
  h1, h2, h3 {
    font-family: "Roboto", sans-serif;
  }
  h1 {
    font-weight: 700;
  }
  h3 {
    font-style: italic;
  }
  .header {
    overflow: hidden;
    background-color: #f1f1f1;
    padding: 20px 10px;
  }
  .logo-container {
    margin: auto
  }
  ul {
    list-style-type: square;
    color: #FDA5A4
  }
  #logo {
    height: 12em;
    display: block;
    margin: auto;
  }
  </style>
{%- endblock html_head_css -%}

{% block body_header %}
  <body class="jp-Notebook" style="padding: 0; margin: 0;">
  <div class="header">
    <div class="logo-container">
      {% include 'abc_logo.svg' %}
    </div>
  </div>
  <div style="padding: 20px; margin: 20px;">
{% endblock body_header %}

{% block body_footer %}
  </div>
  </body>
{% endblock body_footer %}